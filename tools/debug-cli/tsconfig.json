{
    "compilerOptions": {
        "skipLibCheck": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "noEmit": false,
        "strict": true,
        "target": "es6",
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "outDir": "dist",
        "module": "commonjs",
        "lib": [
            "es2015"
        ],
        "sourceMap": true
    },
    "include": [
        "./*"
    ]
}